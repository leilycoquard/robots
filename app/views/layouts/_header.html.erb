<div class="container bg-light header">

  <div class="row align-items-center py-3 d-flex flex-wrap justify-content-between">

    <div class="col-1">
      <% if logged_in? %>
        <%= link_to image_tag("logo.png", class: "img-fluid"), "/home"%>
      <% else %>
        <%= link_to image_tag("logo.png", class: "img-fluid"), "/welcome"%>
      <%end%>
    </div>

    <div class="col-2 d-flex justify-content-between">
      <% if logged_in? %>
        <p><%= current_user.username.upcase %></p>
        <%= link_to image_tag("logout.svg", class: "img-fluid"), logout_path, method: "delete" %>
      <%end%>
    </div>

  </div>

</div>
