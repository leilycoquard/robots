<div class="padding">

  <h1 class="mb-5">Connexion</h1>

  <%= form_tag '/login' do %>
    <%= label_tag :Pseudo%>
    <%= text_field_tag :username %>
    <%= label_tag :Password%>
    <%= password_field_tag :password%>
    <%= submit_tag "Connexion", class:"btn btn-primary btn-lg border border-dark p-3 me-3 mb-3" %>
  <%end%>

</div>
